ï»¿using System;
using System.Runtime.CompilerServices;

unsafe static class NBody_Struct {
    struct NBody { public double x, y, z, vx, vy, vz, mass; }

    public static void Main(string[] args) {
        unchecked {     // There doesn't seem to be a difference between 
                        // using stackaloc or fixed pointer.  
                        // stackalloc takes 3 fewer lines though. 
            NBody* ptrSun = stackalloc NBody[5];
            NBody* ptrEnd = ptrSun+4;
            InitBodies(ptrSun, ptrEnd);

            Console.Out.WriteLineAsync(Energy(ptrSun, ptrEnd).ToString("F9"));
            int advancements = args.Length>0 ? Int32.Parse(args[0]) : 1000;
            while (advancements-- > 0) {
                Advance(ptrSun, ptrEnd, 0.01f);
            }
            Console.Out.WriteLineAsync(Energy(ptrSun, ptrEnd).ToString("F9"));
        }
    }


    [MethodImpl(MethodImplOptions.AggressiveInlining)]
    private static void Advance(NBody* ptrSun, NBody* ptrEnd, float distance) {
        unchecked {
            for (NBody* bi = ptrSun; bi < ptrEnd; ++bi) {
                // Dereference common variables now so they're likely to
                // get stored in registers. The performance advantage is
                // lost if  pointers are dereferenced every time. 
                double ix = bi->x, iy = bi->y, iz = bi->z;
                double imass = bi->mass;
                double ivx = bi->vx, ivy = bi->vy, ivz = bi->vz;
                for (NBody* bj = bi + 1; bj <= ptrEnd; ++bj) {
                    double dx = bj->x - ix, dy = bj->y - iy, dz = bj->z - iz;
                    double d2 = dx * dx + dy * dy + dz * dz;
                    double mag = distance / (d2 * Math.Sqrt(d2));
                    double jmagmass = bj->mass * mag;
                    ivx += dx * jmagmass;
                    ivy += dy * jmagmass;
                    ivz += dz * jmagmass;
                    bj->vx -= dx * imass * mag;
                    bj->vy -= dy * imass * mag;
                    bj->vz -= dz * imass * mag;
                }
                bi->vx = ivx; bi->vy = ivy; bi->vz = ivz;
                bi->x += ivx * distance; bi->y += ivy * distance; bi->z += ivz * distance;
            }
            ptrEnd->x += ptrEnd->vx * distance;
            ptrEnd->y += ptrEnd->vy * distance;
            ptrEnd->z += ptrEnd->vz * distance;
        }
    }


    [MethodImpl(MethodImplOptions.AggressiveInlining)]
    private static double Energy(NBody* ptrSun, NBody* ptrEnd) {
        unchecked {
            double e = 0.0;
            for (NBody* bi = ptrSun; bi <= ptrEnd; ++bi) {
                double imass=bi->mass, ix = bi->x, iy = bi->y, iz = bi->z;
                e += 0.5 * imass * (bi->vx * bi->vx + bi->vy * bi->vy + bi->vz * bi->vz);
                for (NBody* bj = bi + 1; bj <= ptrEnd; ++bj) {
                    double dx = ix - bj->x; dx = dx * dx;
                    double dy = iy - bj->y; dy = dy * dy;
                    double dz = iz - bj->z; dz = dz * dz;
                    e -= imass * bj->mass / Math.Sqrt(dx + dy + dz);
                }
            }
            return e;
        }
    }

    private static void InitBodies(NBody* ptrSun, NBody* ptrEnd) {
        const double Pi = 3.141592653589793;
        const double Solarmass = 4 * Pi * Pi;
        const double DaysPeryear = 365.24;

        ptrSun[1] = new NBody { //jupiter
            x = 4.84143144246472090e+00,
            y = -1.16032004402742839e+00,
            z = -1.03622044471123109e-01,
            vx = 1.66007664274403694e-03 * DaysPeryear,
            vy = 7.69901118419740425e-03 * DaysPeryear,
            vz = -6.90460016972063023e-05 * DaysPeryear,
            mass = 9.54791938424326609e-04 * Solarmass
        };
        ptrSun[2] = new NBody { //saturn
            x = 8.34336671824457987e+00,
            y = 4.12479856412430479e+00,
            z = -4.03523417114321381e-01,
            vx = -2.76742510726862411e-03 * DaysPeryear,
            vy = 4.99852801234917238e-03 * DaysPeryear,
            vz = 2.30417297573763929e-05 * DaysPeryear,
            mass = 2.85885980666130812e-04 * Solarmass
        };
        ptrSun[3] = new NBody { //uranus
            x = 1.28943695621391310e+01,
            y = -1.51111514016986312e+01,
            z = -2.23307578892655734e-01,
            vx = 2.96460137564761618e-03 * DaysPeryear,
            vy = 2.37847173959480950e-03 * DaysPeryear,
            vz = -2.96589568540237556e-05 * DaysPeryear,
            mass = 4.36624404335156298e-05 * Solarmass
        };
        ptrSun[4] = new NBody { //neptune
            x = 1.53796971148509165e+01,
            y = -2.59193146099879641e+01,
            z = 1.79258772950371181e-01,
            vx = 2.68067772490389322e-03 * DaysPeryear,
            vy = 1.62824170038242295e-03 * DaysPeryear,
            vz = -9.51592254519715870e-05 * DaysPeryear,
            mass = 5.15138902046611451e-05 * Solarmass
        };

        double vx=0, vy=0, vz = 0;
        for (NBody* planet = ptrSun + 1; planet <= ptrEnd; ++planet) {
            double mass = planet->mass;
            vx += planet->vx * mass;
            vy += planet->vy * mass;
            vz += planet->vz * mass;
        }
        ptrSun->mass = Solarmass;
        ptrSun->vx = vx / -Solarmass;
        ptrSun->vy = vy / -Solarmass;
        ptrSun->vz = vz / -Solarmass;
    }

}
